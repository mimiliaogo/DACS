{
    "dataset": "cityscapes",
    "ignore_label": 255,
    "model": "DeepLab",
    "pretrained": "coco",
    "seed": 1,
    "training": {
        "batch_size": 2,
        "data": {
            "crop": true,
            "input_size": "512,512",
            "labeled_samples": 0,
            "scale": false,
            "split_id_list": 0
        },
        "learning_rate": 0.00025,
        "lr_schedule": "Poly",
        "lr_schedule_power": 0.9,
        "momentum": 0.9,
        "num_iterations": 250000,
        "num_workers": 4,
        "optimizer": "SGD",
        "unlabeled": {
            "blur": true,
            "color_jitter": true,
            "consistency_loss": "CE",
            "consistency_weight": 1,
            "flip": false,
            "mix_mask": "class",
            "pixel_weight": "threshold_uniform",
            "train_unlabeled": true
        },
        "use_sync_batchnorm": true,
        "weight_decay": 0.0005
    },
    "utils": {
        "checkpoint_dir": "./saved/DeepLabv2",
        "log_per_iter": 100,
        "save_best_model": true,
        "save_checkpoint_every": 5000,
        "tensorboard": true,
        "val_per_iter": 1000
    }
}